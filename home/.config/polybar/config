[module/xwindow]
type = internal/xwindow
label = %title:0:72:...%

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
format-mounted-prefix-foreground = ${colors.foreground}
format-mounted-prefix = "%{T2}%{T-}"
label-mounted = " %percentage_used%%"
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}
format-warn-prefix-background = ${colors.alert}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
ws-icon-0 = 0;%{T2}%{T-}
ws-icon-1 = 1;%{T2}%{T-}
ws-icon-2 = 2;%{T2}%{T-}
ws-icon-3 = 3;%{T2}%{T-}
ws-icon-4 = 4;%{T2}%{T-}
ws-icon-default = %{T2}%{T-}
label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${colors.primary}
label-focused = %icon% %index%
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.foreground-alt}
label-focused-padding = 1
label-unfocused = %icon% %index%
label-unfocused-padding = 1
label-urgent = %icon% %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "%{T2}%{T-}"
format-prefix-foreground = ${colors.foreground}
label = " %percentage%%"
format-warn-prefix-background = ${colors.alert}

[module/memory]
type = internal/memory
interval = 2
format-prefix = "%{T2}%{T-}"
format-prefix-foreground = ${colors.foreground}
label = " %percentage_used%%"
format-warn-prefix-background = ${colors.alert}

[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0
format-prefix = "%{T2}%{T-}"
format-prefix-foreground = ${colors.foreground}
format-connected = " <label-connected>"
label-connected = %essid%  %downspeed%   %upspeed% %local_ip%
format-disconnected =

[module/eth]
type = internal/network
interface = enp60s0u1u4
interval = 3.0
format-connected-prefix = "%{T2}%{T-}"
format-connected-prefix-foreground = ${colors.foreground}
label-connected = "  %downspeed%   %upspeed% %local_ip%"
format-disconnected =

[module/date]
type = internal/date
interval = 5
date = "%Y-%m-%d"
time = %H:%M
time-alt = %H:%M:%S
format-foreground = ${colors.foreground-alt}
format-prefix-foreground = ${colors.foreground-alt}
format-background = ${colors.background-alt}
format-padding = 2
label = "%date% %time%"

[module/volume]
type = internal/pulseaudio
format-volume-prefix = "%{T2}%{T-}"
format-volume-foreground = ${colors.foreground}
label-volume = " %percentage%%"
label-volume-foreground = ${root.foreground}
label-muted = "%{T2}%{T-}"
label-muted-foreground = ${colors.foreground}
label-muted-background = ${colors.alert}
label-muted-padding = 2

[settings]
screenchange-reload = true

[global/wm]
margin-top = 4
