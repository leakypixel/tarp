background yes
xftfont DejaVu\ Sans\ Book:size=12
use_xft yes
xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_transparent yes
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 600
maximum_width 400
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color f0f0f0
alignment top_left
gap_x 45
gap_y 75
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale no
top_cpu_separate no
