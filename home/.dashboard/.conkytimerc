background yes
use_xft yes
xftfont Liberation Sans:size=9
xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_transparent yes
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 250 5
maximum_width 500
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color black
default_shade_color red
default_outline_color green
alignment top_right
gap_x 100
gap_y 300
no_buffers yes
uppercase no
cpu_avg_samples 2
net_avg_samples 1
override_utf8_locale yes
use_spacer yes


TEXT
${voffset 10}${font roboto:bold:pixelsize=120}${time %H:%M}
${font}${voffset -84}${offset 10}${font roboto:bold:pixelsize=42}${time %d} ${voffset -15}${font roboto:bold:pixelsize=22}${time  %B} ${time %Y}${font}${voffset 24}${font roboto:bold:pixelsize=58}${offset -148}${time %A}${font}











