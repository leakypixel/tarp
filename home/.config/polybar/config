[colors]
background = #1B123A
background-alt = #d657c5
foreground = #f3f4f5
foreground-alt = #F20EF7
primary = #48cfcb
secondary = #F20EF7
tertiary = #F20EF7
tertiary-alt = #a26af9
alert = #ffffff

[bar/gerry]
width = 100%
height = 38
radius = 1
fixed-center = false
bottom = true
background = ${colors.foreground}
foreground = ${colors.background}
border-top-size = 4
border-bottom-size = 10
border-left-size = 10
border-right-size = 10
border-color = transparent
padding-left = 0
padding-right = 1
module-margin-left = 2
module-margin-right = 1
font-0 = MononokiNerdFontMono:pixelsize=11;0
font-1 = MononokiNerdFontMono:pixelsize=18;0
font-2 = siji:pixelsize=10;1
modules-left = i3
modules-center = xwindow
modules-right = volume filesystem memory cpu wlan eth date
#tray-position = right
tray-padding = 2
tray-detached = false
tray-background = ${colors.background-alt}
wm-restack = i3 

[module/xwindow]
type = internal/xwindow
label = %title:0:72:...%

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
format-mounted-prefix-foreground = ${colors.background}
format-mounted-prefix = "%{T2}%{T-}"
label-mounted = " %percentage_used%%"
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
ws-icon-0 = 1;%{T2}%{T-}
ws-icon-1 = 2;%{T2}%{T-}
ws-icon-2 = 3;%{T2}%{T-}
ws-icon-3 = 4;%{T2}%{T-}
ws-icon-default = %{T2}%{T-}
label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${colors.primary}
label-focused = %icon% %index%
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 1
label-unfocused = %icon% %index%
label-unfocused-padding = 1
label-urgent = %icon% %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "%{T2}%{T-}"
format-prefix-foreground = ${colors.background}
label = " %percentage%%"

[module/memory]
type = internal/memory
interval = 2
format-prefix = "%{T2}%{T-}"
format-prefix-foreground = ${colors.background}
label = " %percentage_used%%"

[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0
format-prefix = "%{T2}%{T-}"
format-prefix-foreground = ${colors.background}
format-connected = " <label-connected>"
label-connected = %essid%  %downspeed%   %upspeed% %local_ip%
format-disconnected =

[module/eth]
type = internal/network
interface = enp60s0u1u4
interval = 3.0
format-connected-prefix = "%{T2}%{T-}"
format-connected-prefix-foreground = ${colors.background}
label-connected = "  %downspeed%   %upspeed% %local_ip%"
format-disconnected =

[module/date]
type = internal/date
interval = 5
date = "%Y-%m-%d"
time = %H:%M
time-alt = %H:%M:%S
format-prefix-foreground = ${colors.foreground-alt}
label = "%date% %time%"

[module/volume]
type = internal/alsa
format-volume-prefix = "%{T2}%{T-}"
format-volume-foreground = ${colors.background}
label-volume = " %percentage%%"
label-volume-foreground = ${root.foreground}
label-muted = "%{T2}%{T-}"
label-muted-foreground = ${colors.background}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP0
full-at = 99
format-charging-prefix-foreground = ${colors.foreground-alt}
format-charging-prefix = "%{T2} %{T-}"
label-charging = %percentage%%
format-discharging-prefix-foreground = ${colors.foreground-alt}
format-discharging-prefix = "%{T2} %{T-}"
label-discharging = %percentage%%
label-full = %percentage%%
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-prefix = "%{T2} %{T-}"

[module/temperature]
type = internal/temperature
thermal-zone = 1
warn-temperature = 80
format-prefix = "%{T2} %{T-}"
format-prefix-foreground = ${colors.foreground-alt}
label = %temperature-c%
format-warn-prefix = "%{T2} %{T-}"
format-warn-prefix-foreground = ${colors.foreground-alt}
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

[settings]
screenchange-reload = true

