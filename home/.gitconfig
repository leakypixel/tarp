[user]
  email = hi@leakypixel.net
  name = Craig Fletcher

[push]
  default = upstream

[merge]
  ff = no
  tool = vimdiff

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[credential]
  # Somehow different for just about every system I use. First is arch, second is deb. 
  # /usr/share/doc/git/contrib/credential/gnome-keyring/git-credential-gnome-keyring
  # /usr/share/git/credential/gnome-keyring/git-credential-gnome-keyring
  helper = /usr/share/git/credential/gnome-keyring/git-credential-gnome-keyring

[alias]
  co = checkout
  b = branch
  a = add
  s = status
  p = push origin
  hr = reset --hard @{u}
  c = commit -vp
  fi = diff-tree --no-commit-id --name-only -r
  l = log --oneline --abbrev-commit --branches=* --graph --decorate --color
  up = !git fetch origin && git rebase origin/master
  wtf = blame

[core]
  editor = vim
  whitespace = trailing-space,space-before-tab

[commit]
  template = ~/.gitfiles/.gitmessage

[diff]
  algorithm = patience
	tool = vimdiff

[help]
  autocorrect = -1

[credential]
  helper = store
[pull]
	rebase = true
